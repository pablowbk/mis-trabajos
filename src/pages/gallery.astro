---
// Página de galería - solo para usuarios autenticados
import '../styles/global.css';
import MainLayout from '../layouts/MainLayout.astro';
import GalleryIsland from '../components/GalleryIsland.jsx';
---

<MainLayout pageTitle="Galería de Fotos">
  <!-- Welcome Message -->
  <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">
      ¡Bienvenido a tu galería de fotos!
    </h1>
    <p class="text-gray-600">
      Sube y organiza tus fotos con títulos, descripciones y etiquetas.
    </p>
  </div>

  <!-- Upload Section -->
  <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
  <GalleryIsland client:load />
</div>
</MainLayout>
